{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.0.0",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./src",

    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],

    "module": "nodenext",
    "target": "esnext",
    
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },

    "include": [
        "src/**/*.ts",
    ],
    "exclude": ["node_modules", "dist"]

}