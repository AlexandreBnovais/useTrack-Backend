{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.0.0",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./src",

    "lib": [
      "es2020",
    ],

    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
  },

    "include": [
        "src/**/*.ts",
    ],
    "exclude": ["node_modules", "dist"]

}