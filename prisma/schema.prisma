generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
    id        Int       @id @default(autoincrement())
    nome      String  
    email     String    @unique
    password  String
    refreshToken RefreshToken[]
    googleRefreshToken GoogleToken[]
    createdAt DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    @@map("users")
}

model RefreshToken {
    id Int @id @default(autoincrement())
    token String 
    expiry_date Int?
    userEmail String @unique
    user User @relation(fields: [userEmail], references: [email])
    createdAt DateTime @default(now())
}

model GoogleToken {
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id])
    userId Int @unique
    refresh_token String
    access_token String?
    expiry_date Int?
    token_type String?
    id_token String?
    scope String?

}

model Task {
    id Int @id @default(autoincrement())
    title String      
    term  DateTime        
    statuses Status[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    @@index([title])
    @@map("tasks")    
}

model Status {
    id Int @id @default(autoincrement())
    state State 
    task Task @relation(fields: [taskId], references: [id])
    taskId Int @unique
}

enum State {
    ACTIVE
    PENDENT
    FINALIZED
}