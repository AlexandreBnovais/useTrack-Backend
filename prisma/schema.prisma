generator client {
  provider = "prisma-client-js"
  engineType = "queryEngine"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
    id        String       @id @default(uuid())
    nome      String  
    email     String    @unique
    role      String?
    password  String?

    // Refresh Token 
    refreshToken RefreshToken?

    // Relacionamento com leads - 1:N
    leads Lead[]
    followUps FollowUp[]
    clients Client[]

    createdAt DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    @@map("users")
}
model RefreshToken {
    id Int @id @default(autoincrement())
    token String 
    expiryDate Int?
    userEmail String @unique
    user User @relation(fields: [userEmail], references: [email])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    @@map("refreshTokens")
}
model GoogleUser {
    id String @id @default(uuid())
    name String
    email String @unique
    pictureUrl String?
    googleRefreshToken GoogleRefreshToken?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    @@map("googleUsers")
}

model GoogleRefreshToken { 
    id Int @id @default(autoincrement())
    tokenId String @unique
    refreshToken String 
    userId String @unique
    googleUser GoogleUser? @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("googleRefreshTokens")
}

model Client { 
    id String @id @default(uuid())
    name String
    contactName String?
    email String @unique
    phone String?

    sellerId String?

    seller User? @relation(fields: [sellerId], references: [id])
    // Relaciona 1:N entre clientes e leads
    leads Lead[]

    @@map("clients")
}

model SalesFunnelStage { 
    id Int @id @default(autoincrement())
    name String @unique
    order Int @unique
    isClosed Boolean @default(false)

    // Relaciona 1:N entre clientes e leads
    leads Lead[]

    @@map("salesFunnelStages")
}

model Lead { 
    id String @id @default(uuid())
    title String
    value Float
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Relacionamento com vendedor (User) - 1:N
    seller User @relation(fields: [sellerId], references: [id])
    sellerId String

    // Relacionamento com Cliente (Client) - 1:N
    client Client @relation(fields: [clientId], references: [id])
    clientId String

    // Relacionamento com Estagio do Funil (SalesFunnelStage) - 1:N
    stage SalesFunnelStage @relation(fields: [stageId], references: [id])
    stageId Int

    // Relacionamento com FollowUps - 1:N
    followUps FollowUp[]

    // Campo de controle: pr√≥ximo follow-up
    nextFollowUpDate DateTime? 

    @@map("leads")
}

model FollowUp { 
    id String @id @default(uuid())
    notes String
    data DateTime @default(now())
    isCompleted Boolean @default(false)

    updatedAt DateTime? @updatedAt

    lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
    leadId String     

    // Relacionamento com vendedor 
    registeredBy User? @relation(fields: [registeredById], references: [id], onDelete: SetNull)
    registeredById String?

    @@map("followups")
}